---
interface Props {
  id?: string
  class?: string
  maxWidth: string
}

const { id, class: className, maxWidth } = Astro.props
---

<section 
  id={id?.toLowerCase()}
  class={`mx-auto py-24 px-6 tablet:px-0 tablet:w-[75%] flex items-center ${className}`} 
  style={{ maxWidth }}
>
  <slot />
</section>